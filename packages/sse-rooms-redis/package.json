{
    "name": "@opinionated-machine/sse-rooms-redis",
    "version": "1.0.0",
    "description": "Redis adapter for SSE rooms in opinionated-machine",
    "type": "module",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
        "./package.json": "./package.json"
    },
    "maintainers": [
        {
            "name": "Igor Savin",
            "email": "kibertoad@gmail.com"
        }
    ],
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "lint": "biome check . && tsc",
        "lint:fix": "biome check --write .",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:unit": "vitest run --exclude '**/**.integration.spec.ts'",
        "test:integration": "vitest run '**/*.integration.spec.ts'",
        "docker:up": "docker compose up -d --wait",
        "docker:down": "docker compose down",
        "test:docker": "npm run docker:up && npm run test:integration; npm run docker:down",
        "prepublishOnly": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kibertoad/opinionated-machine.git",
        "directory": "packages/sse-rooms-redis"
    },
    "peerDependencies": {
        "opinionated-machine": ">=6.8.0"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.14",
        "@lokalise/biome-config": "^3.1.1",
        "@lokalise/tsconfig": "^3.1.0",
        "@types/node": "^22.19.7",
        "ioredis": "^5.6.1",
        "opinionated-machine": "file:../..",
        "rimraf": "^6.1.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    },
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "sse",
        "rooms",
        "redis",
        "pubsub",
        "opinionated-machine"
    ],
    "homepage": "https://github.com/kibertoad/opinionated-machine/tree/main/packages/sse-rooms-redis",
    "files": [
        "README.md",
        "LICENSE",
        "dist/*"
    ]
}
